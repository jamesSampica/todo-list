@page "/todos/add"

<PageTitle>Add a todo</PageTitle>

<h1>Add a todo</h1>

<form method="post" action="/todos/add">
    <div class="mb-2">
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" class="form-control" />
    </div>
    <button class="btn btn-primary">Save</button>
</form>